<div class="input-group search-top">
    <div class="input-group-btn search-panel">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
            <span id="search_concept">{{selectedType}}</span> <span class="caret"></span>
          {{#tooltip-on-element}}
            <span>{{selectedTypeToolTip}}</span>
          {{/tooltip-on-element}}
        </button>
        <ul class="dropdown-menu" role="menu">
            {{#each applicationTypes as |type|}}
                <li><a {{action 'selected' type}}>{{type}}</a></li>
            {{/each}}
            <li class="divider"></li>
            <li><a {{action 'selected' "Advanced"}}>Advanced</a></li>
        </ul>
    </div>

    <div>
        {{input  size="40" id = "primary-search" type="text" class="form-control" placeholder=selectedTypePlaceHolder  enter='search' value=searchQuery}}
    </div>
    <span class="input-group-btn">
      <button class="btn btn-default" type="button" {{action 'search'}}><span class="glyphicon glyphicon-search"></span></button>
    </span>
</div>
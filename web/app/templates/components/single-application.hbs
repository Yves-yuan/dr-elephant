<table class="app-summary-table box shadow">
    <tr>
        <td class="severity-side-blob-generic severity-side-blob-{{getBootstrapSeverityCode application.severity}}">
        </td>
        <td>
          {{#link-to "app" (query-params applicationid=application.id) class="list-group-item list-group-item-control"}}

              <table class="app-header">
                  <tr>
                      <td class="heading" id="app_summary_id">
                        {{#if (not-empty application.jobname)}}
                            {{application.jobname}} <span class="glyphicon glyphicon-chevron-right"></span> {{application.id}}
                        {{else}}
                            {{application.id}}
                        {{/if}}

                      </td>
                      <td class="user" id="app_summary_user"><span
                              class="glyphicon glyphicon-user"></span>  {{application.username}}</td>
                  </tr>
              </table>

              <table class="borderless">
                  <tbody>
                  <tr>
                      <td class="date-header" id="app_summary_finishtime">
                        {{getDate application.finishtime}}
                      </td>
                  </tr>

                  <tr>
                      <td class="heuristics-block"
                          id="app_summary_heuristics_summary">{{heuristics-summary heuristics=application.heuristicsummary}}</td>
                  </tr>

                  <tr>
                      <td class="aggregated-metrics-block"
                          id="app_summary_aggregated_metrics">{{aggregated-metrics application=application}}</td>
                  </tr>
                  </tbody>
              </table>
          {{/link-to}}
        </td>
    </tr>
</table>

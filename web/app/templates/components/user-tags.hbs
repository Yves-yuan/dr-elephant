<div class="user-tags">
<ul id="myTab" class="nav nav-tabs" role="tablist">
  {{#each usernamesArray as |username|}}
    <li class="tag-list"><label>{{username}}</label> &nbsp;&nbsp;<button type="button" class="btn btn-warning btn-xs"   {{action (action deleteTab username)}}><span class="glyphicon glyphicon-remove"></span></button></li>
  {{/each}}
  <li >
    {{#if showInputBox}}
      {{input id="user-input" action=addTab action="resetInput" placeholder="Add user" class="input-user" valueBinding="newUser" value=""  autofocus="true"}}
    {{/if}}

    <button {{action "showInput"}} class="glyphicon glyphicon-plus input-user-button"></button>
    {{#tooltip-on-element}}
      Add a new user
    {{/tooltip-on-element}}
  </li>
</ul>
  </div>
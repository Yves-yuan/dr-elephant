<nav aria-label="Page navigation">
    <ul class="pagination">
        {{#if shouldShowPrevious}}
            <li class="page-item"><a class="page-link" {{action (action loadPage previousPageNumber)}}>prev</a></li>
        {{/if}}
        {{#each paging.pages as |page|}}
            {{#if (eq page.number paging.currentPage)}}
                <li class="page-item active"><a class="page-link" {{action (action loadPage page.number)}}>{{page.number}}</a></li>
            {{else}}
                <li class="page-item"><a class="page-link" {{action (action loadPage page.number)}}>{{page.number}}</a></li>
            {{/if}}
        {{/each}}
        {{#if shouldShowNext}}
            <li class="page-item"><a class="page-link" {{action (action loadPage nextPageNumber)}}>next</a></li>
        {{/if}}
    </ul>
</nav>